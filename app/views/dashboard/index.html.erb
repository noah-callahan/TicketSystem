

<h2 class="heading-center">Your Open Tickets</h2>
<table class="table-bordered text-center">
    <thead>
        <tr>
            <th>Ticket Number</th>
            <th>Customer</th>
            <th>Tech</th>
            <th>Category</th>
            <th>Equipment</th>
            <th>Hardware</th>
            <th>Software</th>
            <th>Description</th>
            <th>Status</th>
            <th>Walk in?</th>
        </tr>
    </thead>

    <% @mytickets.reverse.each do |f|%>
    <tr>
        <td><%=link_to(f.id, ticket_path(f.id))%></td>
        <td><%=link_to(f.customer.fullname, customer_path(f.customer.id))%></td>
        <td><%=f.user.fullname%></td>
        <td><%=f.category%></td>
        <td><%=f.equipment%></td>
        <td><%=f.hardware%></td>
        <td><% if f.software == nil || f.software == "" %>None<% else %><%=f.software%><% end %></td>
        <td><%=f.description%></td>
        <td><%if f.status == true%>Open<%elsif f.status == false%>Closed<%end%></td>
        <td><%if f.walk_in == true%>Yes<%elsif f.walk_in == false%>No<%end%></td>
    </tr>
    <%end%>
</table>

