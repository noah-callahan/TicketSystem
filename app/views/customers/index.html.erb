<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Address</th>
      <th>Company</th>
      <th>Created By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.fullname, customer %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.email %></td>
        <td><%= customer.fulladdress %></td>
        <td><% if customer.company.nil? %>None<% else %><%= customer.company %><% end %></td>
        <td><%= customer.user.fullname %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
